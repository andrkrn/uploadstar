<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      {{link-to 'New Post' 'posts.new' classNames='btn btn-default'}}
      <div class="posts">
        {{#each model as |post|}}
          <div class="post">
            <h2>
              {{link-to post.caption 'posts.show' post.id}}
            </h2>
            <div class="post-detail">
              <p>Author: {{link-to post.user.full_name 'user' post.user_id}}</p>
            </div>
          </div>
        {{else}}
          <p>Sorry, no content on your feed.</p>
        {{/each}}
      </div>
    </div>
  </div>
</div>